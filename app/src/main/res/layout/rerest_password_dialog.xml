<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvResetPassword"
        android:text="Reset Password"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvWeWill"
        android:text="Chúng tôi sẽ gửi liên kết đặt lại mật khẩu vào email của bạn"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tvResetPassword"
        app:layout_constraintStart_toStartOf="@id/tvResetPassword"/>
<EditText
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:id="@+id/edEmilResetPassword"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    app:layout_constraintEnd_toEndOf="@id/tvWeWill"
    app:layout_constraintStart_toStartOf="@id/tvWeWill"
    app:layout_constraintTop_toBottomOf="@id/tvWeWill"
    />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/edEmilResetPassword"
        app:layout_constraintStart_toStartOf="@id/edEmilResetPassword"
        app:layout_constraintTop_toBottomOf="@id/edEmilResetPassword">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonCancelResetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="Cancel"
            android:textAllCaps="false"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSendResetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@color/orange2"
            android:text="Send"
            android:textColor="@color/white"
            android:textAllCaps="false"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>